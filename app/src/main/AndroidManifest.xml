<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.log.eventscommunities">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_uni_events"
        android:name=".presentation.main.Application"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_uni_events"
        android:supportsRtl="true"
        android:theme="@style/Theme.EventsCommunities">
        <activity
            android:name=".presentation.main.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.EventsCommunities.NoActionBar"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
            <meta-data
                android:name="firebase_performance_logcat_enabled"
                android:value="true" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>